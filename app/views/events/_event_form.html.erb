<div class="my-5">
  <p class="form-header text-center">Create a new event</p>
  <div class="container">
    <div class="mt-5 row justify-content-center">
      <div class="col-6 box-shadow-form p-5">
        <h1 class="fs-2 text-center">Add an event</h1>
        <%= simple_form_for([itinerary, event]) do |f| %>
          <%= f.input :title, label_html: { class: "label-bold"} %>
          <%= f.input :description, label_html: { class: "label-bold"} %>
          <%= f.input :location, label_html: { class: "label-bold"} %>
          <%= f.input :photo, as: :file, label_html: { class: "label-bold"} %>
          <%= f.input :cost, label_html: { class: "label-bold"} %>
          <%= f.input :date_start, as: :datetime, html5: true, label_html: { class: "label-bold"} %>
          <%= f.input :date_end, as: :datetime, html5: true, label_html: { class: "label-bold"} %>
          <%= f.button :submit, class:"btn-purple w-100 mt-4"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
