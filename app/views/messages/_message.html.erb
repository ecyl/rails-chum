<div id="message-<%= message.id %>">
  <% if message.user_id == current_user.id %>
      <div class="message-sender">
        <small>
          <strong>Me</strong>
          <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
        </small>
        <p><%= message.content %></p>
      </div>

      <% else %>
      <div>
       <small>
    <strong><%= message.user.first_name %></strong>
    <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
  </small>
  <p><%= message.content %></p>
      </div>
      <% end %>
      </div>
