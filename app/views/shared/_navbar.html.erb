<div class="navbar navbar-expand-sm navbar-light bg-light">
  <div class="container-fluid">
    <!-- Logo -->
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png", height: "40px" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mb-2 mb-lg-0">
        <div class="d-flex justify-content-between">
        <!-- Navlinks for logged-in user -->
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "ITINERARIES", itineraries_path, class: "nav-link" %>
          </li>

          <!-- User dropdown -->
          <li class="nav-itemdropdown">
            <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
