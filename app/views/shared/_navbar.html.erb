              <span class="username-display"><%= current_user.first_name %></span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <li>
                <div class="dropdown-item-text">
                  <div class="d-flex flex-column justify-content-center align-items-center">
                    <p><strong>Hello, <%= current_user.first_name %></strong></p>
                    <p><%= current_user.email %></p>
                  </div>
                </div>
              </li>
              <li><hr class="dropdown-divider"></li>
              <li><%= link_to "My Trips", "#", class: "dropdown-item" %></li>
              <li><%= link_to "My Messages", "#", class: "dropdown-item" %></li>
              <li><hr class="dropdown-divider"></li>
              <li><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %></li>
            </ul>
          </li>
         <!-- Navlinks for not logged-in user -->
        <% else %>
          <li class="nav-item">
            <%= link_to "ITINERARIES", itineraries_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>







