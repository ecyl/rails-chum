<div class="accordion" id="accordionExample">

  <% @itinerary.events.each do |event| %>
    <div class="accordion-item col-6">
      <h2 class="accordion-header" id="headingOne">
        <button class="accordion-button <%= event.id == @itinerary.events.first.id ? "" : "collapsed" %>" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= event.id %>" aria-expanded="true" aria-controls="collapse<%= event.id %>">
          <%= event.title %>
        </button>
      </h2>
      <div id="collapse<%= event.id %>" class="accordion-collapse collapse<%= event.id == @itinerary.events.first.id ? "show" : "" %>" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
        <div class="accordion-body">
          <div class="event-card">
              <%= image_tag asset_path('event-image.jpg'), class: "event-image"%>

              <div class="event-info">
                <%= event.description %>

              </div>

            </div>
        </div>
      </div>

    </div>
  <% end %>
</div>
