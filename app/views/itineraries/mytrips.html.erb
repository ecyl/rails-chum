<%# Banner %>
<div class="mytrips-banner">
  <h1>My Trips</h1>
</div>

<div class="container my-trips">
  <%# div - completed %>
  <div class="completed-trips">
    <div class="section-header mt-3">
      <h3>Completed</h3>
    </div>

    <div class="section-body">
      <%# trip cards %>
      <%# If empty render no trips %>
      <% if @completed.length.zero? %>
        <div class="zero-trips container">
          <h5 class="mb-4">Oops. Looks like you haven't completed any trips yet.</h5>
          <%= link_to 'Browse itineraries', itineraries_index_path, class: "btn-orange-outline" %>
        </div>
      <% else %>

      <% end %>

      <% @completed.each do |itinerary| %>
        <div class="trip-card">
            <!-- background image -->
            <div class="trip-card-background">
              <% if itinerary.photo.attached? %>
                <img class="itinerary-image" src="<%= cl_image_path itinerary.photo.key %>" alt="itinerary image">
              <% else %>
                <!-- TODO: This needs to match the itinerary banner image in the show page -->
                <img src="https://source.unsplash.com/random/430x246/?trip,<%= itinerary.title %>" alt="itinerary image">
              <% end %>
            </div>
            <div class="black-overlay">
              <div class="trip-card-content">
                <%# itinerary title %>
                <div class="trip-card-title">
                  <h2><%= itinerary.title %></h2>
                  <p>by <%= itinerary.user.first_name %> <%= itinerary.user.last_name %></p>
                </div>

                <%# leave a review %>
                <%= link_to "Leave a review", "#", method: :post, class: "btn-platinum-outline"%>
              </div>
            </div>
        </div>
      <% end %>
    </div>

  </div>
  <%# div - ongoing %>
  <%# div - organising %>

</div>
