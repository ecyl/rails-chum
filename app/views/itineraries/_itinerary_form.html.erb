<div class="my-3">
  <h1 class="form-header text-center">Create a new itinerary</h1>
  <div class="container">
    <div class="mt-3 row justify-content-center">
      <div class="col-6 form-background-alabaster p-5">
        <%= simple_form_for(itinerary) do |f| %>
          <%= f.input :title, label_html: { class: "label-bold"} %>
          <%= f.input :participant_limit, label: "Followers Limit", label_html: { class: "label-bold"}, hint: 'Indicate the number of followers for your trip here', hint_html: { class: "hint-text" }  %>
          <%= f.input :description, as: :text, label_html: { class: "label-bold"}, hint: "Give a brief introduction about your itinerary", hint_html: { class: "hint-text" } %>
          <%= f.input :deadline, as: :date, label_html: { class: "label-bold"}, hint: "Set a deadline for your followers to know when to respond by", hint_html: { class: "hint-text" } %>
          <%# f.input :restrictions, as: :date, label_html: { class: "label-bold"}, hint: "If you wish to add group specifications to your itinerary (e.g. females only, etc)", hint_html: { class: "hint-text" } %>

          <%= f.button :submit, class:"btn-orange d-flex"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
