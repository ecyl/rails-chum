<div class="mb-5">
  <p class="form-header text-center mt-3">Create a new itinerary</p>
  <div class="container">
    <div class="mt-3 row justify-content-center">
      <div class="col-6 grey-border-form p-5">
        <h1 class="fs-2 text-center">Create a new trip</h1>
        <%= simple_form_for(itinerary) do |f| %>
          <%= f.input :title, label_html: { class: "label-bold"} %>
          <%= f.input :destination, label_html: { class: "label-bold"}, hint: "Indicate where will you be heading to", hint_html: { class: "hint-text" } %>
          <%= f.input :photo, as: :file %>
          <%= f.input :participant_limit, label: "Followers Limit", label_html: { class: "label-bold"}, hint: 'Indicate the number of followers for your trip here', hint_html: { class: "hint-text" }  %>
          <%= f.input :description, as: :text, label_html: { class: "label-bold"}, hint: "Give a brief introduction about your itinerary", hint_html: { class: "hint-text" } %>
          <%= f.input :deadline, as: :datetime, html5: true, label_html: { class: "label-bold"}, hint: "Set a deadline for your followers to know when to respond by", hint_html: { class: "hint-text" } %>
          <%# <%= f.input :restrictions, as: :date, label_html: { class: "label-bold"}, hint: "If you wish to add group specifications to your itinerary (e.g. females only, etc)", hint_html: { class: "hint-text" } %>
          <%= f.association :restrictions, as: :check_boxes, class: "tag-item", input_html: { class: "tag-selector" }, wrapper_class: "label-bold", item_wrapper_class: "tag-item",
          label_html: { class: "label-bold" }, hint: "If you wish to add group specifications to your itinerary (e.g. females only, etc)", hint_html: { class: "hint-text" } %>

          <%= f.button :submit, class:"btn-orange btn-orange-normal mt-4"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
